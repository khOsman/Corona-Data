<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="@color/bgOne"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/logo_hdpi"
        android:layout_marginTop="15dp"
        android:cropToPadding="true"
        android:layout_gravity="center"
    />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latest Covid-19 Data"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textAlignment="center">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/resourcecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:cardCornerRadius="20dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_margin="20dp"
        >
        <Spinner
            android:id="@+id/rSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:prompt="@string/app_name"
            android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bangladesh"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textAlignment="center">
    </TextView>

    <TextView
        android:id="@+id/infected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Infected"
        android:textAlignment="center"
        android:textColor="@color/infected"
        android:textSize="25sp"
       >

    </TextView>

    <TextView
        android:id="@+id/recovered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Recoverd"
        android:textAlignment="center"
        android:textColor="@color/recovered"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/deaths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Deaths"
        android:textAlignment="center"
        android:textColor="@color/deaths"
        android:textSize="25sp">

    </TextView>

</LinearLayout>